@model UFC.Models.LogOnModel
@{ Layout = "";}
<html>
<head>
<title>Central de apostas</title>
<style type="text/css">
.fontelogin {font-family: calibri, helvetica, serif; font-size: 15px; font-weight: bold;font-style: normal;color:#363636;}
.fonteerro {font-family: calibri, helvetica, serif; font-size: 14px; font-weight: bold; font-style: normal;color:#FF0000;}
.inputlogin {border-bottom-style:none;border-width:0px;border-color:#ececec;width:190px;background-color:#ececec;}
a:link {text-decoration: none ;color:#363636;}
a:visited {text-decoration: none;color:#363636; }
a:hover { text-decoration: none;color:#363636; }
a:active { text-decoration: none;color:#363636; }
</style>
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.alerts.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.7.1.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ui.core.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ui.dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ui.draggable.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ui.resizable.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Scripts/jquery.alerts.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />   
</head>
<body style="background-color:#404040;">    
<br />
<br />
@using (Html.BeginForm())
{
<table border="0" width="400" style="background-image:url(../Content/UFC-Octagon.gif);background-repeat:no-repeat;" align="center">
<tr valign="top">
    <td style="padding-top:140px;padding-left:90px;" class="fontelogin">Login:<br />
    @Html.TextBoxFor(m => m.UserName, new { @class = "inputlogin" })<br />
    Senha:<br />
    @Html.PasswordFor(m => m.Password, new { @class = "inputlogin" })<br />
    </td>

</tr>
<tr height="175" valign="top">
<td  style="padding-top:1px;padding-left:90px;">
   <span class="fontelogin" style="cursor:pointer" onclick="cadastrarusuario();">Registrar-se</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="submit" value="Entrar" />
</td>
</tr>
<tr valign="top">
<td class="fonteerro" valign="middle">
    @Html.ValidationSummary(true, "Não foi possível realizar login. Corrija os erros e tente novamente.")<br />
</td>
</tr>
</table>
}


<div class="demo">

<div id="dialog">
	<iframe id="iframe_dialog" scrolling="auto" frameborder="0" width="550" height="250" src="../Usuario/Create"></iframe>
</div>
</body>
    <script type="text/javascript">
        function cadastrarusuario() {
            document.getElementById("iframe_dialog").src = '/Account/Register';
                $("#dialog").dialog({
                    title: 'Cadastro de usuário'
                })
                $("#dialog").dialog('open'); 
        }
        var box1 = document.getElementById('UserName');
        box1.focus();
        $(function () {
            $("#dialog").dialog({
                height: 270,
                width:600,
                resizable: false,
                draggable: false,
                autoOpen: false,
                title:"Registro"
            });
        });        
    </script>
</html>
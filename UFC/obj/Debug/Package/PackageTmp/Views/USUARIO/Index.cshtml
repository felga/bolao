@model IEnumerable<UFC.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            NOME
        </th>
        <th>
            Login
        </th>
        <th>
            SALDO
        </th>
        <th>
            ADMIN
        </th>
        <th>
            APOSTA
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
        <td>
			@item.NOME
        </td>
        <td>
			@item.Login
        </td>
        <td>
			@item.SALDO
        </td>
        <td>
			@item.ADMIN
        </td>
        <td>
			@(item.APOSTA == null ? "None" : item.APOSTA.Count.ToString())
        </td>
    </tr>
}

</table>


